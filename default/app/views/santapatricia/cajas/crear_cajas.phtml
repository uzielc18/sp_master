			}
 
         });
	});
	$(".borrar").click(function(){
		var id=$(this).attr('id');
		alert(id);
		$.ajax({
            type:"POST",
            url:"/santapatricia/cajas/borrar/"+id,
            beforeSend:function(){
              $("#loading").show();
            },
            success:function(response){
                $("#loading").hide();
				$("div #c-"+id).remove();
			}
 
         });
		});
	/*grabar detalle de las cajas */
